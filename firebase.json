{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
      "source": "/user/**",
      "destination": "/common/profile.html"
    },
    {
      "source": "/u**",
      "function": "profile"
    },
    {
      "source": "/topic/**",
      "destination": "/common/topic.html"
    }]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
