{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint"
        ]
    },
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/user/**",
                "function": "user"
            },
            {
                "source": "/topic/**",
                "function": "topic"
            },
            {
                "source": "/post/**",
                "function": "post"
            }
        ]
    },
    "storage": {
        "rules": "storage.rules"
    }
}